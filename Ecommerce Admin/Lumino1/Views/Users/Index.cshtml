@model IEnumerable<CommonComponent.Models.User>

@{
    ViewBag.Title = "Index";
}

@*@Html.ActionLink("Create New", "Create")*@
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-10 col-sm-9 col-xs-7"><h3>Users</h3></div>
        <div class="col-md-2 col-sm-3 col-xs-5" style="margin-top : 20px">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </div>
    </div>
    <div class="row">
        <div style="margin-top: 20px" class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="label-wrapper">
                                <label class="control-label"> Email Id:</label>

                            </label>
                        </div>
                        <div class="col-md-9">
                            @Html.TextBox("SearchString")
                            &nbsp;
                            <button class="btn btn-primary" type="submit" value="Filter">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/.col-->
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="bootstrap-table">
                    <div class="fixed-table-header">
                    </div>
                    <div class="">
                        <table id="table-style" class="table table-hover table-striped table-responsive table-bordered" data-row-style="rowStyle">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserEmailId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Password)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Gender)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserFirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserLastName)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.Dob)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ZipPostalCode)
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserEmailId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserFirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserLastName)
                                    </td>

                                    @* <td>
                                            @Html.DisplayFor(modelItem => item.Dob)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ZipPostalCode)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                                        @Html.ActionLink(" Delete", "Delete", new { id = item.UserId },
                                       new { onclick = "return confirm('Are you sure you want to delete this user?');", @class = "delete-button" })
                                        @* @Html.ActionLink("Delete","Delete", new { id = item.UserId },new { onclick = "return confirm('Do you really want to delete." + @item.UserEmailId + "?')" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.UserId })*@
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



