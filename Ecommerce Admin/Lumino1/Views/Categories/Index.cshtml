@model IEnumerable<CommonComponent.Models.Category>

@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-10 col-sm-9 col-xs-7"><h3>Manage Categories</h3></div>
        <div class="col-md-2 col-sm-3 col-xs-5 pull-right" style="margin-top : 20px">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </div>
    </div>
    <div class="row">
        <div style="margin-top: 20px" class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="label-wrapper ">
                                <label class="control-label"> Category Name:</label>

                            </label>
                        </div>
                        <div class="col-md-9">
                            @Html.TextBox("SearchString")
                            &nbsp;
                            @* <input type="text" id="txtName" placeholder="Category Name" class="form-control icon-bar " />*@
                            <button class="btn btn-primary" type="submit" value="Filter">Search</button>
                        </div>
                    </div>
                </div>
            </div>

        </div><!--/.col-->
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="bootstrap-table">
                        <div class="fixed-table-header">

                        </div>
                        <div class="">
                            <table id="table-style" class="table table-hover table-striped table-responsive table-bordered" data-row-style="rowStyle">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CategoryName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Image)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DisplayOrder)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Published)
                                    </th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Image)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DisplayOrder)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Published)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                                            @Html.ActionLink(" Delete", "Delete", new { id = item.CategoryId },
                                       new { onclick = "return confirm('Are you sure you want to delete this user?');", @class = "delete-button" })
                                          
                                             @* @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })*@
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}